{
  "name": "kanapa",
  "version": "0.1.0",
  "description": "A syntax highlighting code block component based on shiki for use with React Server Components",
  "homepage": "https://github.com/hamlim/kanapa",
  "author": {
    "name": "Matt Hamlin",
    "email": "matthewjameshamlin@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hamlim/kanapa",
    "directory": "packages/kanapa"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "shiki": "^1.22.2"
  },
  "type": "module",
  "devDependencies": {
    "@swc/cli": "0.3.10",
    "@swc/core": "1.4.2",
    "hohoro": "0.3.0",
    "@types/bun": "1.1.11",
    "typescript": "5.4.5",
    "shiki": "1.22.2"
  },
  "scripts": {
    "dev": "node --watch-path=./src dev.mjs",
    "build": "hohoro-experimental",
    "type-check": "tsc -p ./tsconfig.json",
    "lint": "biome lint ./src/",
    "test": "bun test",
    "prepub": "bun run build && bun run type-check && bun run lint && bun run test",
    "pub": "npm publish --access public"
  }
}
